<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/b_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sefid" >

    <TextView
        android:id="@+id/b_titrtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/abi"
        android:textSize="15sp" />

    <ScrollView
        android:id="@+id/b_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/b_text_l_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/b_imagemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/laye" />

            <TextView
                android:id="@+id/b_maintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="9dp"
                android:maxLines="500"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="@string/app_name"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>
    <ImageView
        android:id="@+id/share_b_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/share" />

</RelativeLayout>