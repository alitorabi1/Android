<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sefid" >

    <EditText
        android:id="@+id/txt_chcode_irancell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/hint_txtchcode"
        android:inputType="phone"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/aval_mamooli_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_chcode_irancell"
        android:src="@drawable/aval_mamooli_kelid" />

    <ImageView
        android:id="@+id/aval_shegeft_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aval_mamooli_kelid"
        android:layout_toRightOf="@+id/aval_mamooli_kelid"
        android:src="@drawable/aval_shegeft_kelid" />

    <ImageView
        android:id="@+id/aval_send_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_chcode_irancell"
        android:layout_toRightOf="@+id/aval_shegeft_kelid"
        android:src="@drawable/aval_send_kelid" />

    <ImageView
        android:id="@+id/aval_sandoogh_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_chcode_irancell"
        android:layout_toRightOf="@+id/aval_send_kelid"
        android:src="@drawable/aval_sandogh_kelid" />

    <WebView
        android:id="@+id/aval_web_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/aval_mamooli_kelid" />

    <Button
        android:id="@+id/m1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/aval_web_web"
        android:text="1 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/aval_mamooli_kelid"
        android:layout_toRightOf="@+id/m1"
        android:text="2 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/aval_shegeft_kelid"
        android:layout_toRightOf="@+id/m2"
        android:text="5 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/m1"
        android:text="10 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m20"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/m2"
        android:layout_toRightOf="@+id/m10"
        android:text="20 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/m50"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/m5"
        android:layout_toRightOf="@+id/m20"
        android:text="50 000"
        android:textSize="17sp"
        android:visibility="invisible" />

</RelativeLayout>