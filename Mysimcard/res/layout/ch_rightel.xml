<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sefid" >

    <EditText
        android:id="@+id/txt_chcode_rightel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/hint_txtchcode"
        android:inputType="phone"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/rightel_send_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rightel_mamooli_kelid"
        android:layout_toRightOf="@+id/rightel_mamooli_kelid"
        android:src="@drawable/rightel_send_kelid" />

    <ImageView
        android:id="@+id/righte_sandoogh_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rightel_send_kelid"
        android:layout_toRightOf="@+id/rightel_send_kelid"
        android:src="@drawable/rightel_sandoogh_kelid" />

    <ImageView
        android:id="@+id/rightel_mamooli_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_chcode_rightel"
        android:src="@drawable/rightel_mamoolii_kelid" />

    <WebView
        android:id="@+id/rightel_web_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rightel_send_kelid" />

    <Button
        android:id="@+id/r1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/rightel_web_web"
        android:text="1 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/r2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/rightel_web_web"
        android:layout_toRightOf="@+id/r1"
        android:text="2 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/r20"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/r2"
        android:layout_below="@+id/r2"
        android:text="20 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/r10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/r20"
        android:layout_alignBottom="@+id/r20"
        android:layout_alignParentLeft="true"
        android:text="10 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/r50"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/r20"
        android:layout_alignBottom="@+id/r20"
        android:layout_toRightOf="@+id/r20"
        android:text="50 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/r5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/righte_sandoogh_kelid"
        android:layout_toRightOf="@+id/r20"
        android:text="5 000"
        android:textSize="17sp"
        android:visibility="invisible" />

</RelativeLayout>