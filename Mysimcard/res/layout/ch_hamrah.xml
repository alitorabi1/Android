<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sefid" >

    <EditText
        android:id="@+id/chcode_hamrahaval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/hint_txtchcode"
        android:inputType="phone"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/hamrahaval_mamooli_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chcode_hamrahaval"
        android:layout_marginTop="2dp"
        android:src="@drawable/hamrahaval_mamooli_kelid" />

    <ImageView
        android:id="@+id/hamrahaval_send_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chcode_hamrahaval"
        android:layout_toRightOf="@+id/hamrahaval_mamooli_kelid"
        android:src="@drawable/hamrahaval_send_kelid" />

    <ImageView
        android:id="@+id/hamrahaval_sandoogh_kelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chcode_hamrahaval"
        android:layout_toRightOf="@+id/hamrahaval_send_kelid"
        android:src="@drawable/hamrahaval_sandoogh_kelid" />
        
    <WebView
        android:id="@+id/hamrahaval_web_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hamrahaval_mamooli_kelid" />

    <Button
        android:id="@+id/h1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hamrahaval_mamooli_kelid"
        android:text="1 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/h2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_above="@+id/h20"
        android:layout_toRightOf="@+id/h1"
        android:text="2 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/h5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_above="@+id/h20"
        android:layout_toRightOf="@+id/h2"
        android:text="5 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/h10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/h20"
        android:layout_alignBottom="@+id/h20"
        android:layout_toLeftOf="@+id/h2"
        android:text="10 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/h20"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/h1"
        android:layout_toLeftOf="@+id/h5"
        android:text="20 000"
        android:textSize="17sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/h50"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/h20"
        android:layout_alignBottom="@+id/h20"
        android:layout_alignLeft="@+id/h5"
        android:text="50 000"
        android:textSize="17sp"
        android:visibility="invisible" />

</RelativeLayout>