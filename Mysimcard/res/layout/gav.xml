<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/gav_back" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/key_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43.0dip"
        android:background="@color/sefid"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="رمز ورود"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="30.0sp" />

    <ImageView
        android:id="@+id/kelid_gav_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/key_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28.0dip"
        android:src="@drawable/kelid_gav_unlock" />

</RelativeLayout>